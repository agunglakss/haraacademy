	<!--=       Hero Banner Area End      =-->

	<!-- Start Categories Area  -->
	<div class="edu-categorie-area categorie-area-2 edu-section-gap bg-color-dark" id="categories">
		<div class="container">
				<div class="section-title section-center" >
						<h2 class="title">Top Categories</h2>
						<span class="shape-line"><i class="icon-19"></i></span>
						<p>Consectetur adipiscing elit sed do eiusmod tempor incididunt ut labore et dolore</p>
				</div>

				<div class="row g-5">
						<div class="col-lg-4 col-md-6">
								<div class="categorie-grid categorie-style-2 color-primary-style">
										<div class="icon">
												<i class="icon-9"></i>
										</div>
										<div class="content">
												<h5 class="title">Business Management</h5>
										</div>
								</div>
						</div>

						<div class="col-lg-4 col-md-6">
								<div class="categorie-grid categorie-style-2 color-secondary-style">
										<div class="icon">
												<i class="icon-10 art-design"></i>
										</div>
										<div class="content">
												<h5 class="title">Arts & Design</h5>
										</div>
								</div>
						</div>

						<div class="col-lg-4 col-md-6" >
								<div class="categorie-grid categorie-style-2 color-extra01-style">
										<div class="icon">
												<i class="icon-11 personal-development"></i>
										</div>
										<div class="content">
												<h5 class="title">Personal Development</h5>
										</div>
								</div>
						</div>

						
				</div>
		</div>
	</div>
	<!-- End Categories Area  -->

	<!-- Start Course Area  -->
	<div class="edu-course-area course-area-1 edu-section-gap bg-color-dark">
			<div class="container">
					<div class="section-title section-center">
							<span class="pre-title">Playback Courses</span>
							<h2 class="title">Pick A Course To Get Started</h2>
							<span class="shape-line"><i class="icon-19"></i></span>
					</div>
					<div class="row g-5">
							<!-- Start Single Course  -->
							<% @courses_playback.each do |course| %>
							<div class="col-md-6 col-xl-3">
									<div class="edu-course course-style-1">
											<div class="inner">
													<div class="thumbnail">
															<a href="course-details.html">
																	<%= image_tag (course.image), alt: "Hara Academy" %>
															</a>
													</div>
													<div class="content">
													<span class="course-level"><%= course.category.name%></span>
															<h6 class="title">
																	<a href="#"><%= course.title %></a>
															</h6>
															<div class="course-price">Rp <%= course.price %></div>
															<ul class="course-meta">
																	<li><i class="icon-24"></i>13 Lessons</li>
															</ul>
															<a href="course-details.html" class="edu-btn btn-secondary btn-small">Enrolled <i class="icon-4"></i></a>	
													</div>
											</div>
									</div>
							</div>
							<% end %>
							<!-- End Single Course  -->
					</div>
					<div class="course-view-all">
							<a href="course-one.html" class="edu-btn">Browse more courses <i class="icon-4"></i></a>
					</div>
			</div>
	</div>
	<!-- End Course Area -->

	<!-- Start Course Area  -->
	<div class="edu-course-area course-area-1 edu-section-gap bg-color-dark">
			<div class="container">
					<div class="section-title section-center">
							<span class="pre-title">Live Courses</span>
							<h2 class="title">Pick A Course To Get Started</h2>
							<span class="shape-line"><i class="icon-19"></i></span>
					</div>
					<div class="row g-5">
							<!-- Start Single Course  -->
							<% @courses_live.each do |course| %>
							<div class="col-md-6 col-xl-3">
									<div class="edu-course course-style-1">
											<div class="inner">
													<div class="thumbnail">
															<a href="course-details.html">
																	<%= image_tag (course.image), alt: "Hara Academy" %>
															</a>
													</div>
													<div class="content">
													<span class="course-level"><%= course.category.name%></span>
															<h6 class="title">
																	<a href="#"><%= course.title %></a>
															</h6>
															<div class="course-price">Rp <%= course.price %></div>
															<ul class="course-meta">
																	<li><i class="icon-24"></i>13 Lessons</li>
															</ul>
															<a href="course-details.html" class="edu-btn btn-secondary btn-small">Enrolled <i class="icon-4"></i></a>	
													</div>
											</div>
									</div>
							</div>
							<% end %>
							<!-- End Single Course  -->
					</div>
					<div class="course-view-all">
							<a href="course-one.html" class="edu-btn">Browse more courses <i class="icon-4"></i></a>
					</div>
			</div>
	</div>
	<!-- End Course Area -->

</div>
