<div class="edu-breadcrumb-area pt-4">
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item text-white"><a href="#">HaraAcademy</a></li>
        <li class="breadcrumb-item text-white active" aria-current="page">Courses</li>
      </ol>
    </nav>
  </div>
</div>

<div class="edu-course-area course-area-1 bg-color-dark pt-3">
	<div class="container">
		<div class="row gx-5">
			<div class="col-lg-12">
				<div class="edu-sorting-area">
						<div class="sorting-left">
								<h6 class="showing-text">We found <span><%= @total_course %></span> courses available for you</h6>
						</div>
						<div class="sorting-right">
							<div class="edu-sorting">
								<div class="icon"><i class="icon-55"></i></div>
								<select class="edu-select">
									<option>Filters</option>
									<option>Low To High</option>
									<option>High Low To</option>
									<option>Last Viewed</option>
								</select>
							</div>
						</div>
				</div>
			</div>
			
			<div class="col-lg-3">
				<div class="edu-course-sidebar">
					<%= render "sidebar" %>
				</div>
			</div>

			<div class="col-lg-9">
				<div class="row">
				<% @courses.each do |course| %>
					<div class="col-md-6 col-lg-4 col-xl-4 mb-5 gx-5">
						<div class="edu-course course-style-1 hover-button-bg-white">
							<div class="inner">
								<div class="thumbnail">
									<a href="course-details.html">
										<%= image_tag course.image, alt: course.title%>
									</a>
								</div>
								<div class="content">
									<span class="course-level"><%= course.category.name %></span>
									<h6 class="title">
											<a href="#"><%= course.title %></a>
									</h6>
									<%
										num_groups = course.price.to_s.chars.to_a.reverse.each_slice(3)
										price = num_groups.map(&:join).join(',').reverse
									%>
									<div class="course-price">Rp <%= price %></div>
									<ul class="course-meta">
											<li><i class="icon-24"></i>15 Lessons</li>
									</ul>
									<a href="course-details.html" class="edu-btn btn-secondary btn-small">Enrolled <i class="icon-4"></i></a>
								</div>
							</div>
						</div>
					</div>
				<% end %>
				</div>

			</div>
			
		</div>

		<ul class="edu-pagination ">
				<li><a href="#" aria-label="Previous"><i class="icon-west"></i></a></li>
				<li class="active"><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li class="more-next"><a href="#"></a></li>
				<li><a href="#">8</a></li>
				<li><a href="#" aria-label="Next"><i class="icon-east"></i></a></li>
		</ul>

	</div>
</div>