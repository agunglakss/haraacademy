<section class="account-page-area">
  <div class="container-fluid position-relative bg-color-dark">
    <div class="row">
      <div class="col-lg-12 mx-5 px-5 text-white mt-5">Welcome back, <%= current_user.first_name + " " + current_user.last_name %>!</div>

      <div class="col-lg-12">
        <div class="login-form-box mx-5 px-5 text-white mt-5">
          <div class="row pb-5">

            <div class="col-sm-4 col-md-4 col-lg-4">
              <div class="card bg-color-light-dark">
                <div class="card-body p-5">
                  <h4 class="card-title text-secondary">New Member Today</h4>
                  <h2 class="card-text text-white"><%= @total_user_join_today %> Member</h2>
                </div>
              </div>
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4">
              <div class="card bg-color-light-dark">
                <div class="card-body p-5">
                  <h4 class="card-title text-secondary">Total Member</h4>
                  <h2 class="card-text text-white"><%= @total_user %> Member</h2>
                </div>
              </div>
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4">
              <div class="card bg-color-light-dark">
                <div class="card-body p-5">
                  <h4 class="card-title text-secondary">New Orders Today</h4>
                  <h2 class="card-text text-white"><%= @total_order_today %> Orders</h2>
                </div>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  </div>
  
  <div class="container-fluid position-relative mb-5">
    <div class="row mx-5 px-5"> 
      <div class="col-lg-12">
        <div class="login-form-box mt-5 shadow-sm">
          <div class="card-body">
            <h4 class="card-title text-dark">Orders</h4>
            <hr>
            <table class="table table-hover table-striped">
              <thead class="table-light">
                <tr>
                  <th scope="col">Order ID</th>
                  <th scope="col">Name</th>
                  <th scope="col">Status Payment</th>
                  <th scope="col">Course Title</th>
                  <th scope="col">Created at</th>
                  <th scope="col">Updated at</th>
                </tr>
              </thead>
              <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <th><%= order.id%></th>
                  <th><%= order.user.first_name %></th>
                  <th><%= order.status %></th>
                  <th><%= order.course.title %></th>
                  <th><%= order.created_at %></th>
                  <th><%= order.updated_at %></th>
                </tr>
              <% end %>
              </tbody>
            </table>
            <nav aria-label="Page navigation example">
              <ul class="pagination pagination-lg">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>

    </div>
    
  </div>

  
</section>

