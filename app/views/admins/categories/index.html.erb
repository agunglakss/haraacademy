<section class="account-page-area section-gap-equal">
  <div class="container position-relative">
    <div class="row g-5 justify-content-center">
      <% if notice %>
      <div class="col-lg-12">
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
      </div> 
      <% end %>
      <div class="col-lg-12">
        <div class="login-form-box">
          <h3 class="title">Categories</h3>
            <%= link_to "New Category", new_admins_category_path, class: "btn btn-outline-primary btn-lg mt-5 mb-5" %>
            
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">Category name</th>
                  <th scope="col">Icon</th>
                  <th scope="col">Color</th>
                  <th scope="col">Sequence</th>
                  <th scope="col">Created by</th>
                  <th scope="col">Updated by</th>
                  <th scope="col">Created at</th>
                  <th scope="col">Updated at</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <th><%= category.name %></th>
                  <th><%= category.icon %></th>
                  <th><%= category.color %></th>
                  <th><%= category.sequence %></th>
                  <th><%= category.created_by %></th>
                  <th><%= category.updated_by %></th>
                  <th><%= category.created_at %></th>
                  <th><%= category.updated_at %></th>
                  <th><%= link_to "Edit", edit_admins_category_path(category) %> | <%= button_to "Delete", admins_category_path(category), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } } %></th>
                </tr>
              <% end %>
              </tbody>
            </table>
          
        </div>
      </div>
    </div>
      
    <ul class="shape-group">
      <li class="shape-1 scene"><%= image_tag ("about/shape-07.png"), alt: "Hara Academy" %></li>
      <li class="shape-2 scene"><%= image_tag ("about/shape-13.png"), alt: "Hara Academy" %></li>
      <li class="shape-3 scene"><%= image_tag ("counterup/shape-02.png"), alt: "Hara Academy" %></li>
    </ul>
    
  </div>
</section>