<%= link_to admins_categories_path, class: "edu-btn btn-medium mt-3" do %>Back to categories <i class="icon-4"></i><% end %>

<%= form_with model: category, url: url, class: "mt-5" do |f| %>

    <div class="mb-3 form-group">
      <%= f.label :name do %>Category name <span class="text-danger">*</span><% end %>
      <%= f.text_field :name, placeholder: "Input category name", autofocus: true,  class: "form-control" %>
      <span class="text-danger"><%= category.errors[:name].first %></span>
    </div>

    <div class="mb-3 form-group">
      <%= f.label :icon, "Category icon" %>
      <%= f.text_field :icon, placeholder: "Input category icon", class: "form-control" %>
    </div>

    <div class="mb-3 form-group">
      <%= f.label :color, "Category color" %>
      <%= f.text_field :color, placeholder: "Input category color", class: "form-control" %>
    </div>

    <div class="mb-3 form-group">
      <%= f.label :sequence, "Sequence" %>
      <%= f.text_field :sequence, placeholder: "Input Sequence, ex: 1, 2, 3 etc", class: "form-control" %>
    </div>

    <div class="mb-3 form-group">
      <%= button_tag :submit, class: "edu-btn btn-medium"%>
    </div>

<% end %>
