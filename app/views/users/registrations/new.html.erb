<section class="account-page-area section-gap-equal">
  <div class="container position-relative">
    <div class="row g-5 justify-content-center">
      <div class="col-lg-5">
        <div class="login-form-box registration-form">
          <h3 class="title">Registration</h3>
          <p>Already have an account? <%= render "users/shared/links" %></p>
          <span class="text-danger"><%= alert %></span>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>

              <div class="form-group">
                <%= f.label :first_name %> <span class="text-danger">*</span>
                <%= f.text_field :first_name, autofocus: true, placeholder: "Input your first name" %>
              </div>
              <div class="form-group">
                <%= f.label :last_name %> <span class="text-danger">*</span>
                <%= f.text_field :last_name, placeholder: "Input your last name" %>
              </div>
              <div class="form-group">
                <%= f.label :phone_number %> <span class="text-danger">*</span>
                <%= f.text_field :phone_number, placeholder: "Input your whatsapp number" %>
              </div>

              <div class="form-group">
                <%= f.label :email %> <span class="text-danger">*</span>
                <%= f.email_field :email, placeholder: "Input your email" %>
              </div>
              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><span class="text-danger">*</span>
                <%= f.password_field :password, autocomplete: "new-password" %>
                <span class="password-show"><i class="icon-76"></i></span>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation %> <span class="text-danger">*</span>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                <span class="password-show"><i class="icon-76"></i></span>
                <small style="color: #dc3545"><%= resource.errors[:password_confirmation].first %></small>
              </div>

              <div class="form-group">
                <%= button_tag class:"edu-btn btn-medium" do %>
                  Create Account <i class="icon-4"></i>
                <% end %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
    <ul class="shape-group">
      <li class="shape-1 scene"><%= image_tag ("about/shape-07.png"), alt: "Hara Academy" %></li>
      <li class="shape-2 scene"><%= image_tag ("about/shape-13.png"), alt: "Hara Academy" %></li>
      <li class="shape-3 scene"><%= image_tag ("counterup/shape-02.png"), alt: "Hara Academy" %></li>
    </ul>
  </div>
</section>
