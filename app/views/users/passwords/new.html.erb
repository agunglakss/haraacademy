<section class="account-page-area section-gap-equal">
  <div class="container position-relative">
    <div class="row g-5 justify-content-center">
      <div class="col-lg-6">
        <div class="login-form-box">
          <h3 class="title">Forgot your password?</h3>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= f.label :email %> <span class="text-danger">*</span>
              <%= f.email_field :email, autofocus: true %>
            </div>
            <div class="form-group">
              <%= button_tag class:"edu-btn btn-medium" do %>
                Send reset password <i class="icon-4"></i>
              <% end %>
            </div>
          <% end %>
          <div class="form-group chekbox-area">
            <%= link_to "Login", new_user_session_path, class: "password-reset" %>
          </div>
        </div>
      </div>
    </div>
      
    <ul class="shape-group">
      <li class="shape-1 scene"><%= image_tag ("about/shape-07.png"), alt: "Hara Academy" %></li>
      <li class="shape-2 scene"><%= image_tag ("about/shape-13.png"), alt: "Hara Academy" %></li>
      <li class="shape-3 scene"><%= image_tag ("counterup/shape-02.png"), alt: "Hara Academy" %></li>
    </ul>
    
  </div>
</section>